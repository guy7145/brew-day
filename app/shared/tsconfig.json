{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "composite": true,
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types",
      "./src/types"
    ],
    "noEmit": false
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "./src"
  ]
}
