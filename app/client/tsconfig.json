{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": "./",
    "outDir": "./dist/",
    "removeComments": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "noImplicitAny": false,
    "target": "es5",
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "jsx": "react",
    "types": [
      "node"
    ],
    "paths": {
      "@shared/*":  ["../shared/src/*"]
    },
    "typeRoots": [
      "node_modules/@types",
      "@shared/src/types"
    ]
  },
  "include": [
    "./src/**/*",
    "./src/declarations.d.ts"
  ],
  "exclude": [
    "./dist/"
  ]
}
